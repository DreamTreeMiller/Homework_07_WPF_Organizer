<Window x:Class="Homework_07_WPF_Organizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_07_WPF_Organizer"
        mc:Ignorable="d"
        Title="Ежедневник" Height="500" Width="600" MinHeight="480" MinWidth="540">
	<Grid ShowGridLines="False" >
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" 
							  MinWidth="325"
							  />
			<ColumnDefinition Width="*"  MinWidth="200"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="5*" MinHeight="190"/>
			<RowDefinition Height="9*"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="currentDate"
				   Margin="10, 5" 
				   FontSize="16" 
				   FontWeight="Bold" 
				   HorizontalAlignment="Left" 
				   VerticalAlignment="Top"
				   />
		<ListBox x:Name="dayToShowList"
				 Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"
				 Margin="10"
				 HorizontalContentAlignment="Stretch"
				 ScrollViewer.HorizontalScrollBarVisibility="Disabled" DataContextChanged="dayToShowList_DataContextChanged"
				 >
			<ListBox.ItemTemplate>
				<DataTemplate>
						<Grid ShowGridLines="False">
							<Grid.ColumnDefinitions>
							<ColumnDefinition Width="200"/>
							<ColumnDefinition/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition/>
								<RowDefinition/>
								<RowDefinition/>
							</Grid.RowDefinitions>
							<TextBox x:Name="noteTime"
									 Text="{Binding stringTime}"
									 Grid.Column="0" 
									 Grid.Row="0"
									 HorizontalAlignment="Left" 
									 />
							<TextBox x:Name="noteLocation"
									 Text="{Binding Location}"
									 Grid.Column="1" Grid.Row="0"
									 HorizontalAlignment="Right"
									 />
							<TextBox x:Name="noteTitle"
									 Text="{Binding Title}"
									 Grid.Column="0" 
									 Grid.ColumnSpan="2" 
									 Grid.Row="1"
									 HorizontalAlignment="Left"
									 TextWrapping="Wrap"
									 />
							<TextBox x:Name="noteText"
									 Text="{Binding Text}"
									 Grid.Column="0" 
									 Grid.ColumnSpan="2" 
									 Grid.Row="2"
									 HorizontalAlignment="Stretch"
									 TextWrapping="Wrap" 
									 />
						</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		
		<Calendar x:Name="MyCalendar"
			FirstDayOfWeek="Monday"
			Grid.Column="1"
			Grid.Row="1"
			Margin="10, 7, 10, 5"
			MinHeight="170" MinWidth="180"
			HorizontalAlignment="Center"  
			VerticalAlignment="Top" SelectedDatesChanged="CalendarSelectedDate"
		/>
		<StackPanel
			Grid.Column="1"
			Grid.Row="2"
			>
			<Button Name="GenerateNotes" 
					Content="Сгенерировать записи" 
					Click="Click_GenerateNotes"  
					Width="180"
					Margin="5"
					BorderThickness="0"
					Background="WhiteSmoke">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>
			<Button Name="NewNote" 
					Content="Новая запись" 
					Width="180"
					Margin="5"
					BorderThickness="0"
					Background="WhiteSmoke"
					Click="Click_NewNote"
					>
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>
			<Button Name="DeleteNote" 
					Content="Удалить запись" 
					Width="180"
					Margin="5"
					BorderThickness="0"
					Background="WhiteSmoke"
					Click="Click_DeleteNote"
					>
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>
			<Button Name="SearchNote" 
					Content="Поиск" 
					Width="180"
					Margin="5"
					BorderThickness="0"
					Background="WhiteSmoke"
					Click="Click_SearchNote">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>
			<Button Name="UploadFromXLM" 
					Content="Загрузить из XML файла"
					Width="180"
					Margin="5"
					BorderThickness="0"
					Background="WhiteSmoke"
					Click="Click_UploadFromXLM">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>
			<Button Name="SaveToXLM" 
					Content="Сохранить в XML файл"
					Width="180"
					Margin="5"
					BorderThickness="0"
					Background="WhiteSmoke"
					Click="Click_SaveToXLM">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>
			<Button Name="RecycleBin" 
					Content="Корзина"
					Width="180"
					Margin="5"
					BorderThickness="0"
					Background="WhiteSmoke"
					Click="Click_RecycleBin">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>
			<Button Name="ExitButton" 
					Content="Выход"
					Width="180"
					Margin="5, 5, 5, 15"
					BorderThickness="0"
					Background="WhiteSmoke"
					Click="Click_ExitButton" 
					IsCancel="True">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="5"/>
					</Style>
				</Button.Resources>
			</Button>
		</StackPanel>
	</Grid>
</Window>
